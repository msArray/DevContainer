{
  "name": "Node.js, Bun, Rust, Golang Dev Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu-22.04",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/rust:1": {},
    "ghcr.io/devcontainers/features/go:1": {
      "version": "latest"
    },
    "ghcr.io/charliejwang/devcontainer-features/bun:1": {}
  },
  "postCreateCommand": "npm install -g bun && apt-get update && apt-get install -y curl && curl --proto '=https' --tlsv1.2 -sSf https://bun.sh/install | bash",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "rust-lang.rust",
        "golang.go"
      ]
    }
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  }
}
